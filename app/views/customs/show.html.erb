<% provide(:title, "構成詳細") %>

<div id="customs-show">
  <article>
    <h1><%= @custom.name %><%= "名称未設定" if @custom.name.empty? %></h1>
    <p>
      <%= link_to "編集", edit_custom_path(@custom) %> |
      <%= link_to "削除", @custom, method: :delete, data: { confirm: "本当によろしいですか？" }, class: "delete" %>
      <span class="timestamp">
        <%= time_ago_in_words(@custom.updated_at) %>前に保存
      </span>
    </p>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">パーツ名</th>
          <th scope="col">スペック</th>
          <th scope="col">販売ページリンク等</th>
          <th scope="col">値段</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">CPU</th>
          <td><%= @custom.cpu %></td>
          <td><%= raw Rinku.auto_link(h(@custom.cpu_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.cpu_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">グラフィックボード</th>
          <td><%= @custom.gpu %></td>
          <td><%= raw Rinku.auto_link(h(@custom.gpu_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.cpu_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">OS</th>
          <td><%= @custom.os %></td>
          <td><%= raw Rinku.auto_link(h(@custom.os_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.cpu_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">メモリ</th>
          <td><%= @custom.memory %></td>
          <td><%= raw Rinku.auto_link(h(@custom.memory_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.memory_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">PCケース</th>
          <td><%= @custom.case %></td>
          <td><%= raw Rinku.auto_link(h(@custom.case_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.case_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">M.2 SSD</th>
          <td><%= @custom.m2 %></td>
          <td><%= raw Rinku.auto_link(h(@custom.m2_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.m2_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">2.5インチSSD</th>
          <td><%= @custom.ssd %></td>
          <td><%= raw Rinku.auto_link(h(@custom.ssd_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.ssd_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">HDD</th>
          <td><%= @custom.hdd %></td>
          <td><%= raw Rinku.auto_link(h(@custom.hdd_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.hdd_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">電源ユニット</th>
          <td><%= @custom.psu %></td>
          <td><%= raw Rinku.auto_link(h(@custom.psu_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.psu_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">マザーボード</th>
          <td><%= @custom.motherboard %></td>
          <td><%= raw Rinku.auto_link(h(@custom.motherboard_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.motherboard_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">CPUクーラー</th>
          <td><%= @custom.cooler %></td>
          <td><%= raw Rinku.auto_link(h(@custom.cooler_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.cooler_price, :locale => 'ja') %></td>
        </tr>
        <tr>
          <th scope="row">周辺機器</th>
          <td><%= @custom.peripheral %></td>
          <td><%= raw Rinku.auto_link(h(@custom.peripheral_url), :all,
                  'target="_blank" rel="noopener noreferrer"') %></td>
          <td><%= number_to_currency(@custom.peripheral_price, :locale => 'ja') %></td>
        </tr>
      </tbody>
    </table>
    <p class="amount center">合計：<%= number_to_currency(@amount, :locale => 'ja') %></p>
  </article>
</div>
